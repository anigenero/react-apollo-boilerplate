{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom",
      "webworker"
    ]
  },
  "exclude": [
    "node_modules",
    "/**/*.spec.ts",
    "/**/*.spec.tsx",
    "./src/__mocks__/*.ts"
  ],
  "include": [
    "./types/**/*",
    "./src/**/*"
  ]
}

